{
  "compilerOptions": {
    "target": "es2015",
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build",
    "lib": [ "es2015" ]
  },
  "exclude": [
    "node_modules/**/*"
  ],
  "include": [
    "src/*",
    "bin/*"
  ]
}
